{{> layout/header}}

<div class="container" style="margin-top: 5%; margin-bottom: 5%">
    <!--    enctype="multipart/form-data"-->
    <div class="row">
        <!-- 이미지 -->
        <div class="col-lg-4 mb-4 mb-lg-0">
            <img src="" width="300" height="300">
        </div>

        <!-- 상품 정보 입력 -->
        <div class="col-lg-6 px-xl-10">
            <div class="mb-3 mt-3">
                상 품 명 : <input name="name" value="{{product.name}}" type="text" class="form-control" disabled>
            </div>

            <div class="mb-3 mt-3">
                상품가격 : <input name="price" value="{{product.price}}" type="number" class="form-control" disabled>
            </div>
            <div class="mb-3 mt-3">
                상품수량 : <input name="qty" value="{{product.qty}}" type="number" class="form-control" disabled>
            </div>

            <div class="d-flex justify-content-center">
                <a href="/product/{{id}}/update-form">
                    <button type="submit" class="btn btn-primary mt-3">수정</button>
                </a>
                <form action="/product/{{id}}/delete" method="post">
                    <button type="submit" class="btn btn-danger mt-3">삭제</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{> layout/footer}}